#-------------------------------------------------
# aliases
#-------------------------------------------------
if [[ -x `which exa` ]]; then
    alias ls='exa'
    alias lla='exa -la'
    alias lc='exa -abghHliS --git'
fi

if [[ -x `which rg` ]]; then
    alias grep='rg'
fi

if [[ -x `which colordiff` ]]; then
    alias diff='colordiff -u'
fi

if [[ -x `which ccat` ]]; then
    alias cat='ccat'
fi

if [[ -x `which gsed` ]]; then
    alias sed='gsed'
fi


#-------------------------------------------------
# Coloring
#-------------------------------------------------
export LESS='-R'
export LESSOPEN='| /usr/share/source-highlight/src-hilite-lesspipe.sh %s'

